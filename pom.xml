<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.torrance.gilleain</groupId>
  <artifactId>sigma</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>Sigma</name>
  <description>Amazon lambda for checking isomorphism of graphs</description>

<repositories>
    <repository>
      <id>normal-repo</id>
      <name>The usual</name>
      <url>https://repo1.maven.org/maven2/</url>
    </repository>
  
  </repositories>


 <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.2</version>
        <configuration>
          <createDependencyReducedPom>false</createDependencyReducedPom>
          <!-- 
<artifactSet>
            <excludes>
               <exclude>junit:junit:*:jar</exclude>
            </excludes>
          </artifactSet>
-->
        </configuration>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
 </build>

  <dependencies>
    <dependency>
      <groupId>com.amazonaws</groupId>
      <artifactId>aws-lambda-java-core</artifactId>
      <version>1.2.1</version>
    </dependency>
   <!-- 
  <dependency>
      <groupId>com.google.code.gson</groupId>
      <artifactId>gson</artifactId>
      <version>2.8.9</version>
    </dependency>
--> 
    <dependency>
      <groupId>com.github.gilleain.signatures</groupId>
      <artifactId>signatures</artifactId>
      <version>1.1</version>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.13.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>